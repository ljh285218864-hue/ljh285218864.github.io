  <script>
    // 支付方式切换：显示/隐藏信用卡字段 & PayPal 说明，顺便改按钮文字
    const cardFields   = document.getElementById('cardFields');
    const paypalPanel  = document.getElementById('paypalPanel');
    const payButton    = document.getElementById('payButton');

    document.querySelectorAll('input[name="pay_method"]').forEach(function (radio) {
      radio.addEventListener('change', function () {
        if (this.value === 'card') {
          cardFields.style.display  = 'block';
          paypalPanel.style.display = 'none';
          payButton.textContent     = 'Pay securely now';
        } else {
          cardFields.style.display  = 'none';
          paypalPanel.style.display = 'block';
          payButton.textContent     = 'Pay with PayPal';
        }
      });
    });

    // 账单邮箱：只有当选择“使用不同邮箱”时显示额外输入框
    const billingExtra = document.getElementById('billingExtra');
    document.querySelectorAll('input[name="billing"]').forEach(function (radio) {
      radio.addEventListener('change', function () {
        if (this.value === 'other') {
          billingExtra.style.display = 'block';
        } else {
          billingExtra.style.display = 'none';
        }
      });
    });
  </script>
